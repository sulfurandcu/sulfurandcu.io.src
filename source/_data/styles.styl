// 站點主標題
.site-title {
    font-size: 28px;
}
// 站點副標題
.site-subtitle{
    font-size: 12px;
}
// 文章標題
.posts-expand .post-title {
    color: rgb(26,26,26);
    font-size: 26px;
    font-weight: 700;
}
// 文章段落
.post-body h1 {
    border-bottom: none;
}
// 文章段落
.post-body h2 {
    border-bottom: none;
}
// 文章段落
.post-body h3 {
    border-bottom: none;
}
// 文章段落
.post-body h4 {
    border-bottom: none;
}
// 文章段落
.post-body h5 {
    border-bottom: none;
}
// 文章段落
.post-body h6 {
    border-bottom: none;
}
// 文章內容
.post-body {
    color: rgb(51, 51, 51);
    font-size: 16px;
    font-weight: 400;
}
// 閱讀更多按鈕
.post-button .btn {
    color: rgb(51, 51, 51);
    background-color: rgb(255, 255, 255);
    font-size: 15px;
    text-decoration: none;
    border: none;
    padding: 0px 15px;
}
// 閱讀更多按鈕 - 懸浮
.post-button .btn:hover {
    color: rgb(42, 109, 244);
    background-color: rgb(255, 255, 255);
    font-size: 15px;
    text-decoration: none;
}
// 全局鏈接
a {
    border-bottom: none;
    text-decoration: none;
}
// 全局鏈接 - 懸浮
a:hover {
    color: rgb(42, 109, 244);
    border-bottom: none;
    text-decoration: none;
}
// 菜單鏈接
.menu .menu-item a {
    font-size: 14px;
}
// 菜單鏈接 - 懸浮
.menu .menu-item a:hover {
    color: rgb(34, 34, 34);
    border-bottom: none;
    text-decoration: none;
}
// 文章鏈接（爲 emoji 特設）
.post-body a {
    color: rgb(51, 51, 51);
    border-bottom: none;
    text-decoration: none;
}
// 文章鏈接 - 懸浮（爲 emoji 特設）
.post-body a:hover {
    color: rgb(42, 109, 244);
    border-bottom: none;
    text-decoration: none;
}
// 側欄目錄鏈接
.post-toc ol a {
    border-bottom: none;
    text-decoration: none;
}
// 側欄目錄鏈接 - 懸浮
.post-toc ol a:hover {
    color: rgb(34, 34, 34);
    border-bottom: none;
    text-decoration: none;
}
// 着重號
.emphasis-point {
  font-weight:normal;
  text-emphasis:'•';
  -webkit-text-emphasis:'•';
  -moz-text-emphasis:'•';
  text-emphasis-position:under;
  -webkit-text-emphasis-position:under;
  -moz-text-emphasis-position:under
}
.post-body h1 .header-anchor::before,
.post-body h2 .header-anchor::before,
.post-body h3 .header-anchor::before,
.post-body h4 .header-anchor::before,
.post-body h5 .header-anchor::before,
.post-body h6 .header-anchor::before,
.post-body h1 .headerlink::before,
.post-body h2 .headerlink::before,
.post-body h3 .headerlink::before,
.post-body h4 .headerlink::before,
.post-body h5 .headerlink::before,
.post-body h6 .headerlink::before {
  content: '\f054';
  font-family: 'Font Awesome 5 Free';
  font-weight: 900;
}
